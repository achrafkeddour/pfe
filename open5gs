sudo apt update
sudo apt install gnupg
sudo apt install curl
curl -fsSL https://pgp.mongodb.com/server-8.0.asc \
| sudo gpg -o /usr/share/keyrings/mongodb-server-8.0.gpg --dearmor

echo "deb [arch=amd64,arm64 signed-by=/usr/share/keyrings/mongodb-server-8.0.gpg] https://repo.mongodb.org/apt/ubuntu jammy/mongodb-org/8.0 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-8.0.list

sudo apt update

sudo apt install -y mongodb-org
sudo systemctl start mongod
sudo systemctl enable mongod


sudo add-apt-repository ppa:open5gs/latest
sudo apt update
sudo apt install open5gs


nano subscribers.js
// put the content of this file

//executing the script in the database
mongosh open5gs subscribers.js

//To check that the subscribers were inserted:
mongosh open5gs
db.subscribers.find().pretty()

sudo systemctl restart mongod



//modify three files 
sudo gedit /etc/open5gs/amf.yaml
sudo gedit /etc/open5gs/smf.yaml
sudo gedit /etc/open5gs/upf.yaml

sudo systemctl status open5gs-* //status of all services of open5gs
sudo systemctl restart open5gs-*
sudo systemctl status open5gs-*
//everything is working after modifying the three files


